<div class="row" id="imageCenter">
      <img scr="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2F24.media.tumblr.com%2F60c1c7978583b8defa34f4d304382896%2Ftumblr_muoiu1qWms1qzgjfco1_500.gif&f=1&nofb=1" alt="burger" height="200" width="200" id="imageCenter">
      </div>
      <div class="row">
         <div class="col-lg-4">
          <div>
            <ul>
              {{#each burgers}}
                {{#unless this.devoured}}
                  <li>
                    {{this.burger_name}}
                      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                      <input type="hidden" name="devoured" value="true">
                      <button type="submit">Devour</button>
                      </form>
                  </li>
                {{/unless}}
              {{/each}}
            </ul>
          </div>
         </div>
         <div class="col-lg-4">
            <h1>Burger</h1>
             <p>Choose Burger, Eat Burger</p>
              <form method="POST" action="burgers/create" class="button-size">
              <textarea type="text" name="burger_name"></textarea>
              <button type="submit">Another Burger Please!</button>
        </div>
        <div class="col-lg-4">
          <div>
            <h2>Burgers that have been devoured</h2>
              <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                  <li>
                    {{this.burger_name}}
                     <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button type="submit">Un-Eat?</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
            </div>
         </div>
      </div>